@model MarketPlace.ViewModels.MarketFormViewModel
    @{
    ViewBag.Title = "Create";
  
}

<h2>Add a Market</h2>
@using (Html.BeginForm("Create","Markets"))

{
@Html.AntiForgeryToken()
<div class="form-group">
    @Html.LabelFor(m => m.Name)
    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Name)
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Place)
    @Html.TextBoxFor(m => m.Place, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Place)
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Date)
    @Html.TextBoxFor(m => m.Date, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Date)
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Time)
    @Html.TextBoxFor(m => m.Time, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Time)
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Category)
    @Html.DropDownListFor(m => m.Category, new SelectList(Model.Categories, "Id", "Name"), "", new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Category)
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Organiser)
    @Html.TextBoxFor(m => m.Organiser, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Organiser)
</div>
<button type="submit" class="bbtn btn-primary">Save</button>

}
@section scripts
{
      @Scripts.Render("~/bundles/jqueryval")
}

